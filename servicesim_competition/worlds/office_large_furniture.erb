<%
  # Template for furniture for a large office
  #
  # Required variables
  # * $o (number) length of an office unit
  # * $pi (number) Math::Pi
  # * $corner_objs (string[]) List of objects that can go on a corner
%>

<%
  obj = $corner_objs.sample()
%>
<include>
  <pose>
    <%= -1.6*$o %>
    -0.4
    0
    0
    0
    0
  </pose>
  <uri>model://<%= obj %></uri>
</include>

<%
  $pose =
  [
    2 * $o,
    -3 * $o,
    0,
    0,
    0,
    -$pi * 0.5,
  ]
%>
<%= fromFile(DIR + "/cubicle_corner.erb") %>

