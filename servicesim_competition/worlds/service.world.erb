      <background>0.66 0.77 0.84 1.0</background>
      <grid>1</grid>
      <origin_visual>1</origin_visual>
    </scene>

    <!-- Ground collision -->
    <model name="ground_collision">
      <static>true</static>
      <pose>100 100 0 0 0 0</pose>
      <link name="link">
        <collision name="collision">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>200 200</size>
            </plane>
          </geometry>
        </collision>
      </link>
    </model>

    <!-- Ceiling -->
    <%
      x_width = total_x + $cubicle_u
      y_width = total_y + $cubicle_u
      x_offset = x_width * -0.05
      y_offset = y_width * 0.5
    %>
    <model name="ceiling">
      <pose>
