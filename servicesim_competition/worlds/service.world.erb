    %>
    <%= fromFile(DIR + "/room.erb") %>
    <% end %>

    <%
      for y in [5, 9]
        $count += 1
    %>
    <include>
      <name>island_<%= $count %></name>
      <pose>
        <%= 6 * $office_u %>
        <%= y * $office_u %>
        0
        0
        0
        0
      </pose>
      <uri>model://cubicle_island</uri>
    </include>
    <%
