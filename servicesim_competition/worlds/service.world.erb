              <uri>file://media/materials/scripts/</uri>
              <uri>file://media/materials/textures/</uri>
              <name>ServiceSim/Ceiling</name>
            </script>
          </material>
        </visual>
      </link>

    </model>

    <!-- Floor -->
    <model name="floor">
      <pose>
        <%= x_offset %>
        <%= y_offset %>
        <%= -0.001 %>
        0
