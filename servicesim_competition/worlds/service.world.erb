      ]
    %>
    <%= fromFile(DIR + "/room.erb") %>

    <%
      g = 0
      for x in [6, 3]
        g += 1
        $count += 1
        $room_name = 'office_small' + '_' + $count.to_s()
        $room_type = 'office_small'
