    0
  </pose>

  <link name="link">

    <visual name="visual">
      <meta>
        <layer>2</layer>
      </meta>
      <geometry>
        <box>
          <size>
            <%= size_x %>
            <%= size_y %>
            <%= height %>
          </size>
        </box>
      </geometry>
      <material>
        <script>
          <uri>file://media/materials/scripts/gazebo.material</uri>
          <name>Gazebo/RedTransparent</name>
        </script>
      </material>
    </visual>
  </link>

</model>

<% end %>

