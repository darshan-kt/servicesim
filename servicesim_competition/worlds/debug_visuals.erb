<%
  # Creates visuals for debugging purposes
  #
  # Required variables
  # * $drop_areas

  height = 5.0

  for drop in $drop_areas
%>

<model name="<%= drop[:name] %>_min">

  <static>true</static>

  <pose>
    <%= drop[:min][0] %>
    <%= drop[:min][1] %>
    <%= drop[:min][2] + height * 0.5 %>
    0
    0
    0
  </pose>

  <link name="link">

    <visual name="visual">
      <meta>
        <layer>1</layer>
      </meta>
      <geometry>
        <cylinder>
          <radius>0.1</radius>
          <length><%= height %></length>
        </cylinder>
      </geometry>
      <material>
        <script>
          <uri>file://media/materials/scripts/gazebo.material</uri>
          <name>Gazebo/BlueTransparent</name>
        </script>
      </material>
    </visual>
  </link>

</model>

<model name="<%= drop[:name] %>_max">

  <static>true</static>

  <pose>
    <%= drop[:max][0] %>
    <%= drop[:max][1] %>
    <%= drop[:max][2] + height * 0.5 %>
    0
    0
    0
  </pose>

  <link name="link">

    <visual name="visual">
      <meta>
        <layer>1</layer>
      </meta>
      <geometry>
        <cylinder>
          <radius>0.1</radius>
          <length><%= height %></length>
        </cylinder>
      </geometry>
      <material>
        <script>
          <uri>file://media/materials/scripts/gazebo.material</uri>
          <name>Gazebo/GreenTransparent</name>
        </script>
      </material>
    </visual>
  </link>

</model>

<% end %>
