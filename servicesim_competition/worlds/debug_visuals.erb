<%
  # Creates visuals for debugging purposes
  #
  # Required variables
  # * $drop_areas

  height = 5.0

  for drop in $drop_areas

    size_x = drop[:max][0] - drop[:min][0]
    size_y = drop[:max][1] - drop[:min][1]

    center_x = drop[:min][0] + size_x * 0.5
    center_y = drop[:min][1] + size_y * 0.5
%>

<model name="<%= drop[:name] %>_min">

  <static>true</static>

  <pose>
    <%= drop[:min][0] %>
    <%= drop[:min][1] %>
    <%= drop[:min][2] + height * 0.5 %>
    0
    0
    0
  </pose>

  <link name="link">

    <visual name="visual">
      <meta>
        <layer>1</layer>
      </meta>
      <geometry>
        <cylinder>
          <radius>0.1</radius>
          <length><%= height %></length>
        </cylinder>
      </geometry>
      <material>
        <script>
          <uri>file://media/materials/scripts/gazebo.material</uri>
          <name>Gazebo/BlueTransparent</name>
        </script>
      </material>
    </visual>
  </link>

</model>

