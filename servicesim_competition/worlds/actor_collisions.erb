    <%= legs[0] %>
    <%= legs[1] %>
    <%= legs[2] %>
  " delete="true"/>
  <collision name="LeftLeg_LeftFoot_collision" scale="
    <%= legs[0] %>
    <%= legs[1] %>
    <%= legs[2] %>
  "/>
  <collision name="LeftFoot_LeftToeBase_collision" scale="
    <%= feet[0] %>
    <%= feet[1] %>
    <%= feet[2] %>
  " delete="true"/>
  <collision name="RHipJoint_RightUpLeg_collision" scale="
    <%= zero[0] %>
    <%= zero[1] %>
    <%= zero[2] %>
  " delete="true"/>
  <collision name="RightUpLeg_RightLeg_collision" scale="
    <%= legs[0] %>
    <%= legs[1] %>
    <%= legs[2] %>
  " delete="true"/>
  <collision name="RightLeg_RightFoot_collision" scale="
    <%= legs[0] %>
    <%= legs[1] %>
    <%= legs[2] %>
  "/>
  <collision name="RightFoot_RightToeBase_collision" scale="
    <%= feet[0] %>
    <%= feet[1] %>
    <%= feet[2] %>
  " delete="true"/>
  <collision name="LowerBack_Spine_collision" scale="
    <%= torso[0] %>
    <%= torso[1] %>
    <%= torso[2] %>
  " pose="0.05 0 0 0 -0.2 0"/>
  <collision name="Spine_Spine1_collision" scale="
    <%= zero[0] %>
    <%= zero[1] %>
    <%= zero[2] %>
  " delete="true"/>
  <collision name="Neck_Neck1_collision" scale="
    <%= zero[0] %>
    <%= zero[1] %>
    <%= zero[2] %>
  " delete="true"/>
  <collision name="Neck1_Head_collision" scale="
    <%= neck[0] %>
    <%= neck[1] %>
    <%= neck[2] %>
  " delete="true"/>
  <collision name="LeftShoulder_LeftArm_collision" scale="
    <%= zero[0] %>
    <%= zero[1] %>
    <%= zero[2] %>
  " delete="true"/>
  <collision name="LeftArm_LeftForeArm_collision" scale="
    <%= arms[0] %>
    <%= arms[1] %>
    <%= arms[2] %>
  "/>
  <collision name="LeftForeArm_LeftHand_collision" scale="
    <%= arms[0] %>
    <%= arms[1] %>
    <%= arms[2] %>
  " delete="true"/>
  <collision name="LeftFingerBase_LeftHandIndex1_collision" scale="
    <%= hands[0] %>
    <%= hands[1] %>
    <%= hands[2] %>
  " delete="true"/>
  <collision name="RightShoulder_RightArm_collision" scale="
    <%= zero[0] %>
    <%= zero[1] %>
    <%= zero[2] %>
  " delete="true"/>
  <collision name="RightArm_RightForeArm_collision" scale="
    <%= arms[0] %>
    <%= arms[1] %>
    <%= arms[2] %>
  "/>
  <collision name="RightForeArm_RightHand_collision" scale="
    <%= arms[0] %>
    <%= arms[1] %>
