<%
  # Prints a plugin which enables actor collisions

  # Scaling chosen by trial and error
  legs = [8.0, 8.0, 1.0]
  arms = [5.0, 5.0, 1.0]
  feet = [4.0, 4.0, 1.5]
  hands = [4.0, 4.0, 3.0]
  neck = [5.0, 5.0, 3.0]
  torso = [12.0, 20.0, 5.0]
